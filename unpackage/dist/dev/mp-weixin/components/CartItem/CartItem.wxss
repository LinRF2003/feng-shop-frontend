.cart-item {
  display: flex;
  align-items: center;
}
.cart-item .cover .image {
  width: 200rpx;
  height: 200rpx;
}
.cart-item .right {
  flex: 1;
}
.cart-item .right .box {
  display: flex;
  align-items: center;
}
.cart-item .right .box .number-box {
  background: #ebecee;
  border-radius: 44rpx;
}
.cart-item .right .box .number-box .minus {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #304D99;
  border: 1rpx solid #dddddd;
}
.cart-item .right .box .number-box .input {
  padding: 0 20rpx;
  width: 48rpx;
  text-align: center;
  color: #000000;
  font-size: 24rpx;
}
.cart-item .right .box .number-box .plus {
  width: 44rpx;
  height: 44rpx;
  background-color: #304D99;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-item .right .box .number-box .disabled-bg {
  width: 44rpx;
  height: 44rpx;
  background-color: #f7f8fa;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-item .right .box .price {
  flex: 1;
  color: red;
  display: flex;
  align-items: flex-end;
}
.cart-item .right .box .price .b {
  font-size: 36rpx;
}
.cart-item .right .box .price .s {
  font-size: 28rpx;
  line-height: 40rpx;
}

